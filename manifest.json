{
    "name": "Live Transcript Extension",
    "version": "1.0",
    "description": "Help people to get real time transcript.",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_end",
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": " transcript",
        "default_icon": "mic.png"
    },
    
    "permissions": [
        "identity",
        "tabs",
        "activeTab",
        "desktopCapture",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    }
}